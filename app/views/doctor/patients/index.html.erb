<div class="col-12" style="background-color: #AABAD9;">

  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left fa-3x mt-3" style="color: #395579; text-decoration: none;"></i>
      <% end %>
    </div>
    <div class="col-10 mt-3">
      <h2 class="card-text font-weight-bold text-center mb-2">My patients</h2>
    </div>
  </div>

  <% @patients.each do |patient| %>
    <%= link_to doctor_patient_path(patient) do %>
      <div class="row justify-content-around">
        <div class="card col-8 d-flex justify-content-center mt-3 p-2" style="height: auto; background-color: white; border-radius: 8px; border: none;" >
          <p class="ml-5 card-text font-weight-bold text-left mb-2"><%= patient.full_name %></p>
        </div>
      </div>
    <% end %>
  <% end %>

  <br>
  <br>
  <br>

</div>



